       from { opacity: 1; }
       to { opacity: ; }
   }
   
   @keyframes fade-in {
       from { opacity: 0.9; }
       to { opacity: 1; }
   }
   */

</style>

<script>
   import { $ } from '@/lib/dom-selector'

   function projectScrollHover(scrollTop) {
      const proj1 = $('#project-1');
      const proj2 = $('#project-2');
      const proj3 = $('#project-3');
      const proj4 = $('#project-4');
      
      if( Math.floor((proj1.style.height/2) + proj1.getBoundingClientRect().y) === Math.floor(window.screen.height / 2)){
         proj2.blur();
         proj3.blur();
         proj4.blur();
         proj1.focus();
         console.log('------ p 1')
      }
      if( Math.floor((proj2.style.height/2) + proj3.getBoundingClientRect().y) === Math.floor(window.screen.height / 2)){
         proj1.blur();
         proj3.blur();
         proj4.blur();
         proj2.focus();
         console.log('------ p 2')
      }
      if( Math.floor((proj3.style.height/2) + proj3.getBoundingClientRect().y) === Math.floor(window.screen.height / 2)){
         proj1.blur();
         proj2.blur();
         proj4.blur();
         proj3.focus();
         console.log('------ p 3')
      }
      if( Math.floor((proj4.style.height/2) + proj4.getBoundingClientRect().y) === Math.floor(window.screen.height / 2)){
         proj1.blur();
         proj2.blur();
         proj3.blur();
         proj4.focus();
         console.log('------ p 4')
      }
   }
   
   function handleScrollLogic() {
      
      const $header = $('#head');
      const iconsMenu = $('.icons-menu');
      const $DownloadCv = $('#DownloadCv');
      const $labelName = $('#label-name');
      const $sunIcon = $('#sun-icon');
   
      window.addEventListener('scroll', () => {
      const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
      
      projectScrollHover(scrollTop);
      
      if (iconsMenu) {
         iconsMenu.style.top = `${scrollTop + 180}px`;
      }
      
      if ($header && $labelName && $DownloadCv) {
         if (scrollTop > 0) {
            if (scrollTop > 190) {
               $labelName.classList.remove("opacity-0");
               $DownloadCv.classList.add("hidden");
            }
            else {
               $labelName.classList.add("opacity-0");
               $DownloadCv.classList.remove("hidden");
            }
            
            $header.classList.add('fixed');
            $header.classList.add('bg-tm-translucent');
            $header.classList.add('backdrop-blur-md');
            $sunIcon.setAttribute('fill',"#ffffff");
         } else {
            $header.classList.remove('fixed');
            $header.classList.remove('bg-tm-translucent');
            $sunIcon.setAttribute('fill',"#1c1c1c");
         }
      }
   });
   }
   
   document.addEventListener('DOMContentLoaded', handleScrollLogic);
   document.addEventListener('astro:after-swap', handleScrollLogic);

</script>