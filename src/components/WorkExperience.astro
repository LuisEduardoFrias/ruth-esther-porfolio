---
// src/components/WorkExperience.astro
// Asegúrate de que tu constante WORKEXPERIENCES tenga un formato como este:
// {
//   company: string;
//   cargo: string;
//   area?: string; // Opcional
//   startDate: string; // Ejemplo: 'Mayo 2020'
//   endDate: string;   // Ejemplo: 'Actual' o 'Noviembre 2023'
//   tasks: string[];
// }
import { WORKEXPERIENCES } from '@/consts/workExperiences';
---

<ul class="space-y-6">
  
  {WORKEXPERIENCES.map(({ company, cargo, area, tasks }) => (
    <li class="bg-tm-bg rounded-lg shadow-md p-6 border border-tm-border"> {/* Ajustado padding y shadow, usando border sutil */}
      
      <div class="flex flex-col gap-3 mb-2">
         <h3 data-key={company} class="text-xl flex flex-col font-bold text-tm-text leading-tight">
            {company}
         </h3>
         <span data-key={cargo} class="text-lg font-normal text-tm-text2"> ---- {cargo} </span>
         <p class="text-sm text-tm-text2 mt-1">
            {area && <span data-key={area} class="ml-2">Área: {area}</span>} {/* Área integrada en la misma línea o con un salto de línea sutil */}
         </p>
      </div>

      {tasks && tasks.length > 0 && (
        <div class="mt-4">
          <h4 data-key="we" class="text-base font-semibold text-text-primary mb-2">Responsabilidades:</h4>
          <ul class="list-disc list-inside space-y-1 text-text-primary text-sm pl-4"> {/* Lista con viñetas y espaciado */}
            {tasks.map((task, index) => (
              <li data-key={task} key={index}>
                {task}
              </li>
            ))}
          </ul>
        </div>
      )}
    </li>
  ))}
  
</ul>

